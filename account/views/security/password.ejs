<div class="container">
    <div class="row">
        <form role="form" method="post" action="/security/password" class="form-horizontal form-password">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-ok-sign"></span>&nbsp;パスワード再発行</div>
                <div class="panel-body">
                    <div class="form-group <%= form.emailmsg ? 'has-error':'' %>">
                        <label for="inputEmail" class="col-md-4 control-label">メールアドレス</label>
                        <div class="col-md-7">
                            <input id="inputEmail" name="email" type="email" placeholder="例：tanakatairo@osser.jp" value="<%- form.email %>" class="form-control">
                        </div>
                    </div>

                    <div class="form-group <%= form.password1msg ? 'has-error':'' %>">
                        <label for="inputPassword1" class="col-md-4 control-label">パスワード</label>
                        <div class="col-md-7">
                            <input id="inputPassword1" name="password1" type="password" placeholder="********" class="form-control">
                        </div>
                    </div>
                    <div class="form-group <%= form.password2msg ? 'has-error':'' %>">
                        <label for="inputPassword2" class="col-md-4 control-label">パスワードの確認</label>
                        <div class="col-md-7">
                            <input id="inputPassword2" name="password2" type="password" placeholder="********" class="form-control">
                        </div>
                    </div>
                    
                    <input type="hidden" name="authid" value="<%- form.authid %>" />
                    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                    <input id="inputSpecailInput" name="specailInput" type="text" style="display:none" placeholder="例：田中太郎">
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <button class="btn btn-success btn-lg"><span class="glyphicon glyphicon-ok-sign"></span>&nbsp;パスワード再発行</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="pull-right">
                <a href="/security/login"><span class="glyphicon glyphicon-lock"></span>&nbsp;会員ログイン</a>
            </div>
        </form>
    </div>
</div>