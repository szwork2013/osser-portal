<div class="panel panel-default">
    <div class="panel-body">
        <%- partial('../partials/mypagebreadcrumb') %>
        <div>
            <%- partial('../widget/personalsetup', {active:'usereditlogo'}) %>
        </div>
        <div class="row">
            <div class="col-md-12" style="padding-top:20px;">
                <% if (msg){ %>
                    <div class="alert alert-success">
                        <%= msg %>
                    </div>
                <% }%>
                <form role="form" method="post" action="/user/editlogo" class="form-horizontal">
                    <div class="form-group <%= form.emailmsg ? 'has-error':'' %>">
                        <label class="col-md-3 control-label">ロゴ表示タイプ</label>
                        <div class="col-md-8">
                            <div class="radio" style="padding-bottom:10px;">
                                <label>
                                    <input type="radio" name="mylogotype" id="mylogotype3" value="サイト画像" <%= form.mylogotype == 'サイト画像' ? 'checked' : '' %> />サイト画像
                                </label>
                                <br/>
                                <select id="selmylogo" name="selmylogo" style="width:250px;">
                                    <%_.each(gdata.personallogos, function(avatarurl) {%>
                                    <option value="<%=avatarurl%>" data-image="/images/avatar/<%=avatarurl%>" <%= gfunc.endsWith(form.mylogo, avatarurl) ? 'selected' : '' %>><%=avatarurl%></option>
                                    <%})%>
                                </select>
                            </div>
                            <div class="radio" style="padding-bottom:10px;">
                                <label>
                                    <input type="radio" name="mylogotype" id="mylogotype2" value="外部リンク" <%= form.mylogotype == '外部リンク' ? 'checked' : '' %> />外部リンク
                                </label>
                                <input id="inputmylogo" name="mylogo" type="text" placeholder="" class="form-control" value="<%- form.mylogo %>">
                                <span class="help-block">例：<%= gconfig.url.nodejs %><%= gconfig.url.image.osser_logo %></span>
                            </div>
                            <div class="radio" style="padding-bottom:10px;">
                                <label>
                                    <input type="radio" name="mylogotype" id="mylogotype1" value="Gravatar" <%= form.mylogotype == 'Gravatar' ? 'checked' : '' %> />Gravatar (<a href="<%- gconfig.url.redirect%>/?s=mxWmuo4kbuuo0K" target="_blank">ホームページ</a>)
                                </label>
                            </div>
                        </div>
                    </div>
                
                    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                    <input id="inputSpecailInput" name="specailInput" type="text" style="display:none" placeholder="例：田中太郎">
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-success btn-lg">ロゴ更新</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- <msdropdown> -->
<link rel="stylesheet" type="text/css" href="/lib/msdropdown/dd.css" />
<script src="/lib/msdropdown/jquery.dd.min.js"></script>
<script>
$(document).ready(function(e) {
    var selmylogo = $("#selmylogo").msDropdown().data("dd");
    selmylogo.visibleRows(20);
//    selmylogo.on("change", function(res) {
//        console.log(res.target.value);
//    });
});
</script>
