<div class="panel panel-default" style="margin-bottom:2px;border:1px;-webkit-box-shadow: 0 0px 0px rgba(0, 0, 0, 0.0);box-shadow: 0 0px 0px rgba(0, 0, 0, 0.0);">
    <div class="panel-body" style="padding:0px;">

        <div class="panel panel-default panel-myprofile">
            <div class="panel-body ">
                <a href="<%= gconfig.site.nodejs.route.usereditlogo %>">
                    <img src="<%= form.mylogo %>" style="float:left;" class="img-thumbnail myportrait" />
                </a>
                <div style="float:left;padding-left:1px;">
                    <div style="padding-top:5px;">
                        <p>
                            <strong>
                                <%= form.username %>
                            </strong>
                        </p>
                        <% if (form.isself) { %>
                        <p>
                            <a href="<%= gconfig.site.nodejs.route.useredit%>" class="panel-myprofile-link">個人情報</a>
                            &nbsp;
                            <a href="<%= gconfig.site.nodejs.route.usereditlogo%>" class="panel-myprofile-link">ﾛｺﾞ変更</a>
                        </p>
                        <% } else { %>
                            <% if (req.session.osser) {%>
                                <% if (req.session.osser.myurl == form.myurl) { %>
                                    <a href="<%= gconfig.site.nodejs.route.user %>/<%= form.myurl %>" class="panel-myprofile-link">マイページに戻る</a>
                                <% } %>
                            <% } %>
                        <% } %>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="clearfix">
                    経験値：(<%= form.experience %>) ポイント
                </div>
                <% if(process.env.NODE_ENV == 'development') { %>
                <div style="float:left">
                    フォロー(0)　フォロワー(0)
                </div>
                <% } %>
            </div>
        </div>

        <div class="panel panel-default panel-heading-appeal" style="">
            <div class="panel-body ">
                <% if (form.appeal) { %>
                <%= form.appeal %>
                <% } else { %>
                    自分のアピール
                <% }%>
            </div>
        </div>

        <% if (form.isself) { %>
        <div class="panel panel-default panel-heading-setup" style="border:0px;">
            <div class="row">
                <div class="col-xs-6" style="padding-right:1px;">
                    <a class="btn btn-success btn-success-profile-newthread btn-lg" href="<%= gconfig.site.nodejs.route.threadnew %>">
                        <span class="glyphicon glyphicon-pencil"></span>
                        新投稿
                    </a>
                </div>
                <div class="col-xs-6" style="padding-left:1px;">
                    <a class="btn btn-success btn-success-profile btn-lg" href="<%= gconfig.site.nodejs.route.useredit %>">
                        <span class="glyphicon glyphicon-wrench"></span>
                        設定
                    </a>
                </div>
            </div>
        </div>

            <% if(process.env.NODE_ENV == 'development') { %>
            <div class="panel panel-default panel-heading-message" style="border:0px;">
                <div class="row">
                    <div class="col-xs-12" style="">
                        <a class="btn btn-warning btn-message-profile btn-lg" href="/user/<%- form.myurl %>/message">
                            <span class="glyphicon glyphicon-comment"></span>
                            メッセージ管理
                        </a>
                    </div>
                </div>
            </div>
            <% } %>
        <% } %>


    </div>
</div>
