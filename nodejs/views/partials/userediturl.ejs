<div class="panel panel-default">
    <div class="panel-body">
        <%- partial('../partials/mypagebreadcrumb') %>
        <div>
            <%- partial('../widget/personalsetup', {active:'userediturl'}) %>
        </div>
        <div class="row">
            <div class="col-md-12" style="padding-top:20px;">
                <% if (msg){ %>
                    <div class="alert alert-success">
                        <%= msg %>
                    </div>
                <% }%>
                <form role="form" method="post" action="/user/editurl" class="form-horizontal">
                    <div class="form-group <%= form.myurlmsg ? 'has-error':'' %>">
                        <label for="inputMyurl" class="col-md-3 control-label" style="color:brown;">myurl設定</label>
                        <div class="col-md-8">
                            <input id="inputMyurl" name="myurl" type="text" placeholder="例：superman" class="form-control" value="<%-form.myurl%>" <%-form.myurl_disable%> >
                            <span class="">※myurlは「/user/:myurl」に使います、サイト内に唯一なので、一旦決まりましたら二度と変更できないので、ご注意ください。</span>
                            <span class="help-block"><%-form.myurlmsg%></span>
                        </div>
                    </div>

                    <% if (!form.myurl_disable) { %>
                        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                        <input id="inputSpecailInput" name="specailInput" type="text" style="display:none" placeholder="例：田中太郎">
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <button class="btn btn-success btn-lg" <%=form.myurl_disable%> >myurl更新</button>
                            </div>
                        </div>
                    <% } %>
                </form>
            </div>
        </div>
    </div>
</div>
