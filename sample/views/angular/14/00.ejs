<div class="container" ng-controller="mainCtrl1400">
    <h2>
        <a href="/angular"><i class="icon-arrow-left-3 fg-darker"></i></a>
        AngularJSサンプル<small class="on-right">osser.jp</small>
    </h2>
    <hr/>
    <h3>Date Filter Formatter<small class="padding5 bg-grayLighter">{{date_filter_formatter.length}}</small></h3>
    <table class="table hovered ">
        <thead>
            <tr>
                <th>No.</th>
                <th class="text-left">書式</th>
                <th class="text-left">説明</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in date_filter_formatter">
                <td>{{$index+1}}</td>
                <td class="text-left" nowrap>{{item.name}}</td>
                <td class="text-left">
                    <p ng-bind-html="item.desc"></p>
                </td>
            </tr>
        </tbody>
        <tfoot></tfoot>
    </table>
    <h3>Date Filter Formatter(Shortcut)</h3>
    <table class="table hovered ">
        <thead>
            <tr>
                <th>No.</th>
                <th class="text-left">Type</th>
                <th class="text-left">説明</th>
                <th>日付例</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in date_filter_formatter_shortcut">
                <td>{{$index+1}}</td>
                <td class="text-left" nowrap>{{item.name}}</td>
                <td class="text-left">
                    <p ng-bind-html="item.desc"></p>
                </td>
                <td>{{now|date:item.name}}</td>
            </tr>
        </tbody>
        <tfoot></tfoot>
    </table>
</div>
