                desc: '2桁の年表記です。(例: 西暦2001 => 01、 西暦2010 => 10)'
            },
            {
                name: 'MMMM',
                desc: 'January ～ Decemberの形式の月表記です。'
            },
            {
                name: 'MMM',
                desc: 'Jan ～ Decの形式の月表記です。'
            },
            {
                name: 'MM',
                desc: '01 ～ 12の月表記です。'
            },
            {
                name: 'M',
                desc: '1 ～ 12の月表記です。'
            },
            {
                name: 'dd',
                desc: '01 ～ 31の日表記です。'
            },
            {
                name: 'd',
                desc: '1 ～ 31の日表記です。'
            },
            {
                name: 'EEEE',
                desc: 'Sunday ～ Saturdayの週表記です。'
            },
            {
                name: 'EEE',
                desc: 'Sun ～ Satの週表記です。'
            },
            {
                name: 'HH',
                desc: '00 ～ 23の時間表記です。'
            },
            {
                name: 'H',
                desc: '0 ～ 23の時間表記です。'
            },
            {
                name: 'hh',
                desc: '午前・午後の01 ～ 12の時間表記です。'
            },
            {
                name: 'h',
                desc: '午前・午後の1 ～ 12の時間表記です。'
            },
            {
                name: 'mm',
                desc: '00～59の分表記です。'
            },
            {
                name: 'm',
                desc: '0～59の分表記です。'
            },
            {
                name: 'ss',
                desc: '00～59の秒表記です。'
            },
            {
                name: 's',
                desc: '0～59の秒表記です。'
