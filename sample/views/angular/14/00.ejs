        $scope.date_filter_formatter_shortcut = [
            {
                name: 'medium',
                desc: "en_USロケール向けに、'MMM d, y h:mm:ss a'として評価されます。(例: Sep 3, 2010 12:05:08 pm)"
            },
            {
                name: 'short',
                desc: "en_USロケール向けに、'M/d/yy h:mm a'として評価されます。(例: 9/3/10 12:05 pm)"
